<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">

    <id>${APP_ID}</id>
    <launchable type="desktop-id">${DESKTOP_ID}</launchable>

    <name>${APP_NAME}</name>
    <summary>${APP_SUMMARY}</summary>
    <developer_name>${APP_VENDOR}</developer_name>
    <url type="homepage">${APP_URL}</url>
    <metadata_license>MIT</metadata_license>
    <project_license>${APP_LICENSE}</project_license>

    <content_rating type="oars-1.1" />

    <description>
        <p>This is a longer application description. REPLACE THIS WITH YOUR OWN.
        IMPORTANT: In this file, you can use supported macros. See the --help output for details.</p>
    </description>

    <releases>
        <release version="${APP_VERSION}" date="${ISO_DATE}">
            <description><p>The latest release.</p></description>
        </release>
    </releases>

    <screenshots>
        <screenshot type="default">
            <image>https://i.postimg.cc/0jc8xxxC/Hello-Computer.png</image>
        </screenshot>
    </screenshots>

</component>
